<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="알람"/>

    <TextView
        android:id="@+id/busNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="버스번호"/>

    <TextView
        android:id="@+id/onStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="승차정거장"/>

    <TextView
        android:id="@+id/offStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="하차정거장"/>

    <TextView
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="요일"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시간대"/>

    <TextView
        android:id="@+id/gapTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="몇분전"/>

</LinearLayout>